{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ],
      // @lib: ------------------------------------------------------
      "@lib/*": [
        "./src/lib/*"
      ],
      // @components: -----------------------------------------------
      "@components/*": [
        "./src/lib/components/*"
      ],
      "@layout/*": [
        "./src/lib/components/layout/*"
      ],
      // @assets: ---------------------------------------------------
      "@assets/*": [
        "./src/lib/assets/*"
      ],
      "@icons": [
        "./src/lib/assets/icons"
      ],
      "@icons/*": [
        "./src/lib/assets/icons/*"
      ],
      "@styles/*": [
        "./src/lib/assets/styles/*"
      ],
      // @utils: ----------------------------------------------------
      "@utils/*": [
        "./src/lib/utils/*"
      ],
      "@api-client": [
        "./src/lib/utils/api-client"
      ],
      "@api-client/*": [
        "./src/lib/utils/api-client/*"
      ],
      // @types: ----------------------------------------------------
      "@types": [
        "./src/lib/types"
      ],
      "@types/*": [
        "./src/lib/types/*"
      ],
      // @features: -------------------------------------------------
      "@features/*": [
        "./src/features/*"
      ],
      "@studio": [
        "./src/features/studio"
      ],
      "@studio/*": [
        "./src/features/studio/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
